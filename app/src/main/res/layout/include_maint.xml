<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f2f2f2"
    android:id="@+id/ll_maint_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_maint_order_numb"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:padding="8dp"
        android:background="@color/cffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单号"
            android:textColor="#FF000000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text=""
            android:id="@+id/tv_maint_order_numb"
            android:textColor="#FF000000"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ffffff"/>

    <RelativeLayout
        android:id="@+id/rl_maint_group_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_maint_task_expand"
        tools:ignore="UseCompoundDrawables,UselessParent">

        <TextView
            android:id="@+id/txt_check_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:maxWidth="180dp"
            android:textColor="#000000"
            android:textSize="17sp"
            android:text="维修信息"
            tools:text="维修信息" />

        <ImageView
            android:id="@+id/img_maint_collapse_expand"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:src="@mipmap/icon_task_collapse" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_maint_expand"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/cffffff"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/cffffff"
            android:gravity="center_vertical">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/cbx_maint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修"/>

                <RadioButton
                    android:id="@+id/cbx_replace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="替换"/>
            </RadioGroup>


            <RelativeLayout
                android:id="@+id/rl_img_maint"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_toLeftOf="@+id/img_maint_camera"
                android:layout_toStartOf="@+id/img_maint_camera"
                android:contentDescription="@string/app_name">

                <ImageView
                    android:id="@+id/img_maint"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:contentDescription="@string/app_name"
                    android:visibility="gone"
                    tools:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/txt_maint_img_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="#32D6AF"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:text="1" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/img_maint_camera"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="18dp"
                android:layout_marginRight="18dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/icon_camera" />

        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@color/cffffff"
            android:orientation="vertical">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="维修描述"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text=""
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_task_checkitem1"
                android:id="@+id/et_maint_desc"
                android:padding="8dp"
                android:hint="请录入维修内容"
                android:gravity="left|top"
                android:textColor="@color/black"
                android:textSize="12sp"  />
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:padding="8dp"
            android:background="@color/cffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="维修人"
                android:textColor="#FF000000"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text=""
                android:background="#ffffff"
                android:id="@+id/tv_maint_staff_name"
                android:textColor="#FF000000"
                android:textSize="14sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:padding="8dp"
            android:background="@color/cffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="处理状态"
                android:textColor="#FF000000"
                android:textSize="14sp" />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/cbx_solved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已解决"/>

                <RadioButton
                    android:id="@+id/cbx_unsolved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="未解决" />
            </RadioGroup>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:padding="8dp"
            android:background="@color/cffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="联系电话"
                android:textColor="#FF000000"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:inputType="phone"
                android:text=""
                android:id="@+id/tv_maint_tel"
                android:background="#ffffff"
                android:textColor="#FF000000"
                android:textSize="14sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:padding="8dp"
            android:background="@color/cffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="开始时间"
                android:textColor="#FF000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text=""
                android:hint="点击选择时间"
                android:id="@+id/tv_maint_begin_time"
                android:background="#ffffff"
                android:textColor="#FF000000"
                android:textSize="14sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:padding="8dp"
            android:background="@color/cffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="结束时间"
                android:textColor="#FF000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text=""
                android:hint="点击选择时间"
                android:id="@+id/tv_maint_end_time"
                android:background="#ffffff"
                android:textColor="#FF000000"
                android:textSize="14sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:padding="8dp"
            android:background="@color/cffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="工程商"
                android:textColor="#FF000000"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text=""
                android:id="@+id/tv_project_contractor"
                android:background="#ffffff"
                android:textColor="#FF000000"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>