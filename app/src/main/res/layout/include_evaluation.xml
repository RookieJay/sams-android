<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_eval_parent"
    android:background="#f2f2f2">


        <LinearLayout
            android:id="@+id/ll_eval_order_numb"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:padding="8dp"
            android:background="@color/cffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单号"
                android:textColor="#FF000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text=""
                android:id="@+id/tv_eval_order_numb"
                android:textColor="#FF000000"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#ffffff"/>

        <RelativeLayout
            android:id="@+id/rl_eval_group_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_maint_task_expand"
            tools:ignore="UseCompoundDrawables,UselessParent">

            <TextView
                android:id="@+id/txt_check_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:maxWidth="180dp"
                android:textColor="#000000"
                android:textSize="17sp"
                android:text="评价信息"
                tools:text="评价信息" />

            <ImageView
                android:id="@+id/img_eval_collapse_expand"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/app_name"
                android:scaleType="center"
                android:src="@mipmap/icon_task_collapse" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_evla_expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/cffffff"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@color/cffffff">
                <TextView
                    android:id="@+id/txt_eval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="服务评价"
                    android:text="服务评价"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"/>
                <Spinner
                    android:id="@+id/sp_eval"
                    android:layout_toRightOf="@+id/txt_eval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/maint_evalutaion"
                    android:dropDownWidth="100dp"
                    android:dropDownVerticalOffset="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"/>
                <RatingBar
                    android:id="@+id/rt_eval"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="15dp"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:theme="@style/rating_bar"
                    android:isIndicator="false"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@color/cffffff"
                android:orientation="vertical">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="评价描述"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text=""
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_task_checkitem1"
                    android:id="@+id/et_eval_desc"
                    android:padding="8dp"
                    android:hint="请录入服务评价"
                    android:gravity="left|top"
                    android:textColor="@color/black"
                    android:textSize="12sp"  />
            </LinearLayout>

    </LinearLayout>
</LinearLayout>