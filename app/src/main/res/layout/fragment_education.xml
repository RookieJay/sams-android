<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_frm_bg"
    android:clickable="true"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="教育培训"
            android:textColor="#FFFFFFFF"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center|right"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape_submit_btn"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="提交"
            android:visibility="invisible"
            android:textColor="#FFFFFFFF" />

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_slice"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f2f2f2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/cffffff"
                        android:gravity="center|left"
                        android:orientation="vertical"
                        android:padding="8dp">




                            <TextView
                                android:id="@+id/tv_taskName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text=""
                                android:textColor="@color/c000000"
                                android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2222"
                                android:layout_weight="1"
                                android:textColor="@color/c999999"
                                android:textSize="14sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:textColor="@color/c999999"
                                android:textSize="14sp"
                                android:layout_weight="1"
                                android:text=""
                                android:id="@+id/tv_user_name"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="参与人员"
                        android:gravity="center|left"
                        android:textColor="#FF000000"
                        android:visibility="gone"
                        android:padding="8dp"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/ll_people"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1px"
                        android:background="@color/cffffff"
                        android:orientation="horizontal"
                        android:gravity="center|left"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="参与人员:"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:textColor="#FF000000"
                            android:id="@+id/tv_people"
                            android:textSize="14sp" />


                        <com.zp.android.scmp.widget.NoScrollListView
                            android:id="@+id/nlv_sigin"
                            android:layout_toLeftOf="@+id/iv_arr"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@+id/tv_people"
                            android:layout_centerVertical="true"
                            android:layout_height="wrap_content">

                        </com.zp.android.scmp.widget.NoScrollListView>

                        <ImageView
                            android:id="@+id/iv_arr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/icon_public_arrowriht" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/btn_signin"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/shape_exit_btn"
                        android:gravity="center"
                        android:text="签到"
                        android:visibility="gone"
                        android:textColor="@color/cffffff"
                        android:textSize="16sp" />
                    <FrameLayout
                        android:id="@+id/ll_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">




                    </FrameLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1px"
                        android:background="@color/cffffff"
                        android:orientation="horizontal"
                        android:gravity="center|left"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="现场纪要:"
                            android:id="@+id/tv_r_name"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:textColor="#FF000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_r_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text=""
                            android:textColor="#FF000000"
                            android:textSize="14sp" />

                        <com.zp.android.scmp.widget.NoScrollListView
                            android:id="@+id/nlv_r_time"
                            android:layout_width="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/iv_add"
                            android:layout_toRightOf="@+id/tv_r_name"
                            android:layout_height="wrap_content">

                        </com.zp.android.scmp.widget.NoScrollListView>

                        <ImageView
                            android:id="@+id/iv_add"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:padding="8dp"

                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/icon_camera"
                            android:visibility="visible" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/cffffff"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总结汇报:"
                            android:textColor="#FF000000"
                            android:textSize="14sp" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/shape_task_checkitem1">

                            <EditText
                                android:id="@+id/et_content"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@android:color/transparent"
                                android:gravity="left|top"
                                android:hint="请录入总结汇报"
                                android:minWidth="80dp"
                                android:padding="8dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </RelativeLayout>



                        <TextView
                            android:id="@+id/tv_submit"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/shape_exit_btn"
                            android:gravity="center"
                            android:text="提交"
                            android:visibility="invisible"
                            android:textColor="@color/cffffff"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <com.github.xwc.view.ShapeView
            android:layout_width="9dp"
            android:layout_height="7dp"
            android:layout_gravity="bottom"
            app:shape_default_color="#FF09776E"
            app:shape_triangle_percentBottom="1"
            app:shape_triangle_percentLeft="1"
            app:shape_triangle_percentRight="0"
            app:shape_type="triangle" />

        <com.github.xwc.view.ShapeView
            android:layout_width="9dp"
            android:layout_height="7dp"
            android:layout_gravity="bottom|end"
            app:shape_default_color="#FF09776E"
            app:shape_triangle_percentBottom="0"
            app:shape_triangle_percentLeft="0"
            app:shape_triangle_percentRight="1"
            app:shape_type="triangle" />
    </FrameLayout>
</LinearLayout>