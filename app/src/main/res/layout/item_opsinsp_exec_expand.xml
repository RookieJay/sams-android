<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_task_checkitem2_1"
        tools:ignore="UseCompoundDrawables,UselessParent">

        <TextView
            android:id="@+id/txt_numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_check_item_name"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:textColor="#32D6AF"
            android:textSize="20sp"
            tools:text="2." />

        <TextView
            android:id="@+id/txt_check_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/txt_numb"
            android:layout_toRightOf="@+id/txt_numb"
            android:ellipsize="end"
            android:maxWidth="180dp"
            android:maxLines="2"
            android:textColor="#000000"
            android:textSize="14sp"
            tools:text="@string/ask_in_book" />

        <TextView
            android:id="@+id/tv_equip_count"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/img_camera"
            android:background="@drawable/shape_task_nav_green"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/cffffff"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_camera"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/img_collapse_expand"
            android:layout_toLeftOf="@+id/img_collapse_expand"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/icon_scan" />

        <ImageView
            android:id="@+id/img_collapse_expand"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:src="@mipmap/icon_task_expand" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33089E9C" />

    <LinearLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_task_checkitem2_2"
        android:orientation="vertical" />

</LinearLayout>