<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/cffffff"
    android:gravity="center_vertical"
    tools:ignore="UseCompoundDrawables">

    <pers.zjc.sams.widget.roundedimageview.RoundedImageView
        android:id="@+id/myinfo_iv_header"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/icon_base_avatar" />

    <TextView
        android:id="@+id/txt_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/myinfo_iv_header"
        android:layout_toRightOf="@+id/myinfo_iv_header"
        android:textSize="15sp"
        tools:text="张三" />

    <TextView
        android:id="@+id/txt_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_user"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/myinfo_iv_header"
        android:layout_toRightOf="@+id/myinfo_iv_header"
        android:textSize="15sp"
        tools:text="@string/txt_role" />

    <LinearLayout
        android:id="@+id/ll_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            tools:ignore="RelativeOverlap"
            tools:text="@string/txt_major" />
    </LinearLayout>

</RelativeLayout>