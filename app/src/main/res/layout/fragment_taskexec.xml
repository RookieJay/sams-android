<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_frm_bg"
    android:orientation="vertical"
    tools:ignore="SmallSp,HardcodedText,RelativeOverlap">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="任务执行"
            android:textColor="#FFFFFFFF"
            android:textSize="17sp" />

        <FrameLayout
            android:id="@+id/flChangeTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp">

            <ImageView
                android:id="@+id/btn_change_task"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:src="@mipmap/icon_other_task" />

            <ImageView
                android:id="@+id/img_badger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/icon_other_task_tip"
                android:visibility="invisible" />
        </FrameLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_slice"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/txt_task_name"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:text="对网点进行全面安全检查" />

                <TextView
                    android:id="@+id/txt_remain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txt_task_name"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:ignore="RelativeOverlap"
                    tools:text="剩余10小时" />

                <TextView
                    android:id="@+id/txt_plan_exec_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_task_name"
                    android:layout_marginTop="3dp"
                    android:textSize="14sp"
                    tools:ignore="RelativeOverlap"
                    tools:text="06-17 11:00至17:00" />

                <TextView
                    android:id="@+id/txt_check_organ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txt_plan_exec_time"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:drawableEnd="@mipmap/icon_task_collapse"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/icon_task_collapse"
                    android:textSize="14sp"
                    tools:ignore="RelativeOverlap"
                    tools:text="深州 榆科分理处" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/shape_ctl_bg_trans_20" />
            <!--已查 未查 区域-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_checked"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/shape_task_exec_btn1"
                    android:gravity="center"
                    android:textColor="@color/cffffff"
                    android:textSize="12sp"
                    tools:text="已查 999" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txt_uncheck"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/shape_task_exec_btn2"
                    android:gravity="center"
                    android:textColor="@color/cffffff"
                    android:textSize="12sp"
                    tools:text="未查 999" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txt_area"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/shape_task_exec_btn3"
                    android:gravity="center"
                    android:textColor="@color/cffffff"
                    android:textSize="12sp"
                    tools:text="区域 100/999" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="7dp">

                <TextView
                    android:id="@+id/txt_exec_cycle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3A3A3A"
                    android:textSize="10sp"
                    tools:text="本周 3月5日-3月11日" />

                <TextView
                    android:id="@+id/txt_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="#3A3A3A"
                    android:textSize="10sp"
                    tools:text="保安专干" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/shape_ctl_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="7dp">

                <TextView
                    android:id="@+id/lbl_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="位置："
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/lbl_position"
                    android:layout_toRightOf="@+id/lbl_position"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:text="正门卷闸门" />

                <TextView
                    android:id="@+id/txt_touch_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textColor="#3A3A3A"
                    android:textSize="10sp"
                    android:visibility="invisible"
                    tools:text="打卡时间：3月7日 10:30" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_task_checkitem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="7dp" />
        </LinearLayout>

        <com.github.xwc.view.ShapeView
            android:layout_width="9dp"
            android:layout_height="7dp"
            android:layout_gravity="bottom"
            app:shape_default_color="#FF09776E"
            app:shape_triangle_percentBottom="1"
            app:shape_triangle_percentLeft="1"
            app:shape_triangle_percentRight="0"
            app:shape_type="triangle" />

        <com.github.xwc.view.ShapeView
            android:layout_width="9dp"
            android:layout_height="7dp"
            android:layout_gravity="bottom|end"
            app:shape_default_color="#FF09776E"
            app:shape_triangle_percentBottom="0"
            app:shape_triangle_percentLeft="0"
            app:shape_triangle_percentRight="1"
            app:shape_type="triangle" />
    </FrameLayout>
</LinearLayout>