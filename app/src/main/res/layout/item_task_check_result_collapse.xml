<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_task_checkitem1"
        tools:ignore="UseCompoundDrawables,UselessParent">

        <TextView
            android:id="@+id/txt_check_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:maxWidth="200dp"
            android:textColor="#000000"
            android:textSize="14sp"
            tools:text="@string/ask_in_book" />

        <TextView
            android:id="@+id/tvNormal"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tvUnNormal"
            android:background="@drawable/shape_task_checkitem_standard"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/cffffff"
            android:textSize="14sp"
            tools:text="1" />

        <TextView
            android:id="@+id/tvUnNormal"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/img_collapse_expand"
            android:background="@drawable/shape_task_checkitem_unstandard"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/cffffff"
            android:textSize="14sp"
            tools:text="1" />

        <ImageView
            android:id="@+id/img_collapse_expand"
            android:layout_width="17dp"
            android:layout_height="7dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/icon_task_collapse" />

    </RelativeLayout>
</FrameLayout>
