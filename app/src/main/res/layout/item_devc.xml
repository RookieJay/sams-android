<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_task"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="#FFFFFFFF"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/lbl_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="设备名称："
        android:textColor="#FF000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/lbl_item_name"
        android:layout_toRightOf="@+id/lbl_item_name"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#FF000000"
        android:textSize="14sp"
        tools:text="@string/checkItem_name" />

    <TextView
        android:id="@+id/lbl_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_item_name"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="通道号："
        android:textColor="#FF000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txt_channel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lbl_channel"
        android:layout_alignLeft="@+id/txt_days"
        android:layout_alignStart="@+id/txt_days"
        android:layout_toEndOf="@+id/lbl_channel"
        android:layout_toRightOf="@+id/lbl_channel"
        android:background="@null"
        android:hint="请填写通道号"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLines="1"
        android:textColor="@color/c666666"
        android:textSize="14sp"
        tools:ignore="LabelFor"
        tools:text="11" />

    <TextView
        android:id="@+id/lbl_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_channel"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="保存天数："
        android:textColor="#FF000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txt_days"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lbl_days"
        android:layout_toEndOf="@+id/lbl_days"
        android:layout_toRightOf="@+id/lbl_days"
        android:background="@null"
        android:hint="请填写保存天数"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLines="1"
        android:textColor="@color/c666666"
        android:textSize="14sp"
        tools:ignore="LabelFor"
        tools:text="11" />

    <TextView
        android:id="@+id/btn_del"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_task_exec_btn4"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/cffffff"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_ctl_bg" />
</RelativeLayout>
