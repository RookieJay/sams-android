<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cffffffff"
    android:orientation="vertical">

    <include layout="@layout/base_back_title_toolbar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cf2f5f4" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp">

                <TextView
                    android:id="@+id/lbl_acoount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:text="课程名称"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_course_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/lbl_acoount"
                    android:layout_toRightOf="@+id/lbl_acoount"
                    android:gravity="center_vertical"
                    tools:text="账号"
                    android:maxLines="1"
                    android:background="@null"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cf2f5f4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/lbl_device_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:text="上课时间"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_begin_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/lbl_device_no"
                    android:layout_toRightOf="@+id/lbl_device_no"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    android:background="@null"
                    tools:text="姓名" />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/icon_public_arrowriht"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cf2f5f4" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/lbl_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:text="下课时间"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_course_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/lbl_email"
                    android:layout_toRightOf="@+id/lbl_email"
                    android:textColor="@color/colorAccent"
                    android:background="@null"
                    android:inputType="textEmailAddress"
                    tools:text="计算机"
                    android:textSize="14sp" />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/icon_public_arrowriht"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cf2f5f4" />

            <RelativeLayout
                android:id="@+id/rl_tel"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/lbl_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:text="上课地点"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_classroom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/lbl_tel"
                    android:layout_toRightOf="@+id/lbl_tel"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    android:maxLength="11"
                    android:background="@null"
                    tools:text="11314"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cf2f5f4" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>



</LinearLayout>
