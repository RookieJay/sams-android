    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cf2f5f4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp">

        <TextView
            android:id="@+id/lbl_acoount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="用户账号"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/lbl_acoount"
            android:layout_toRightOf="@+id/lbl_acoount"
            android:gravity="center_vertical"
            android:hint="请输入账号"
            android:maxLines="1"
            android:background="@null"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cf2f5f4" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp">

        <TextView
            android:id="@+id/lbl_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="用户密码"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/lbl_pwd"
            android:layout_toRightOf="@+id/lbl_pwd"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:maxLines="1"
            android:background="@null"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cf2f5f4" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp">

        <TextView
            android:id="@+id/lbl_org"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/txt_user_role"
            android:textSize="16sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lbl_org"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学生"
                android:textColor="@color/colorAccent"/>
            <RadioButton
                android:id="@+id/rb_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="教师"
                android:textColor="@color/colorAccent" />
        </RadioGroup>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cf2f5f4" />

    <RelativeLayout
        android:id="@+id/rl_device_no"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/lbl_device_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/lbl_device_no"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_device_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/lbl_device_no"
            android:layout_toRightOf="@+id/lbl_device_no"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            tools:text="8888888888" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cf2f5f4" />

    <RelativeLayout
        android:id="@+id/rl_face"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/lbl_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="人脸图片"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/lbl_face"
            android:layout_toRightOf="@+id/lbl_face"
            android:textColor="#FF34413D"
            android:textSize="14sp"
            android:hint="请点击上传人脸图片"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_public_arrowriht"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cf2f5f4" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:background="@drawable/shape_click_btn"
        android:text="@string/btn_register"
        android:textColor="@color/cffffffff"
        android:textSize="22sp" />
</LinearLayout>
