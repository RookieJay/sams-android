<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_task_checkitem1"
        tools:ignore="UseCompoundDrawables,UselessParent">

        <TextView
            android:id="@+id/txt_numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_check_item_name"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:textColor="#32D6AF"
            android:textSize="20sp"
            tools:text="2." />

        <TextView
            android:id="@+id/txt_check_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/txt_numb"
            android:layout_toRightOf="@+id/txt_numb"
            android:ellipsize="end"
            android:maxLines="2"
            android:maxWidth="180dp"
            android:textColor="#000000"
            android:textSize="14sp"
            tools:text="@string/ask_in_book" />

        <ImageView
            android:id="@+id/img_about"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/txt_check_item_name"
            android:layout_toRightOf="@id/txt_check_item_name"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:src="@mipmap/icon_about" />

        <ImageView
            android:id="@+id/img_collapse_expand"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:src="@mipmap/icon_task_collapse" />
    </RelativeLayout>
</FrameLayout>